//CONSTRUCTOR ADD ANDB
#include<iostream>

using namespace std;

class calculation
{
    private:
        int num1,num2;
        
    public:
        calculation()
        {
            cout<<"This is a default constructor"<<endl;
        }
        
        calculation(int i,int j)
        {
            num1=i;
            num2=j;
        }
        
        void add()
        {
            int result=num1+num2;
            cout<<"The sum is "<<result<<endl;
        }
        
        
        void sub()
        {
            int result=num1-num2;
            cout<<"The difference is "<<result<<endl;
        }
};

int main()
{
    calculation obj;
    calculation obj2(50,20);
    obj2.add();
    obj2.sub();
    return 0;
}
